<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#A90307F4">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="165dp"
            android:layout_height="163dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/myavatarbegin" />

    </FrameLayout>

    <TextView
        android:id="@+id/etPUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:layout_below="@+id/fl"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/btnModifyData"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Modify information"
        android:layout_below="@+id/etPUsername"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Delete My account"
        android:layout_below="@+id/btnModifyData"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@+id/btnDeleteAccount"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btnCall"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:layout_below="@+id/btnLogout"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
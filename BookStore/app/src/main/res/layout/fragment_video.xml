<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/vvVideo1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="TED: How To Study?"
                android:textSize="20dp"/>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <VideoView
                    android:id="@+id/vvVideo2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvVideoName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frameLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:text="TED: How to Get Your Brain to Focus?"
                android:textSize="20dp" />


            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <VideoView
                    android:id="@+id/vvVideo3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvVideoName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frameLayout3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:text="TED: How To Make Stress Your Friend?"
                android:textSize="20dp"/>



        </LinearLayout>




    </ScrollView>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileDetailActivity">
    <RelativeLayout
        android:id="@+id/rlUserProfileDetailGlobal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/llUserProfileDetailAvatar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FAFAFA"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Avatar"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/ivProfileDetailAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/avatar1"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right_point_2"/>





            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/llUserProfileDetailID"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/llUserProfileDetailAvatar"
            android:layout_marginTop="5dp"
            android:background="#FAFAFA"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvProfileDetailId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="123456"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>



            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llUserProfileDetailNick"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/llUserProfileDetailID"
            android:layout_marginTop="5dp"
            android:background="#FAFAFA"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nick Name"
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvProfileDetailNick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bob"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right_point_2"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llUserProfileDetailGender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/llUserProfileDetailNick"
            android:layout_marginTop="5dp"
            android:background="#FAFAFA"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Gender"
                    android:textSize="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvProfileDetailGender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Male"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right_point_2"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llUserProfileDetailPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/llUserProfileDetailGender"
            android:layout_marginTop="5dp"
            android:background="#FAFAFA"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Phone No."
                    android:textSize="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:id="@+id/tvProfileDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0172331061"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right_point_2"/>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            android:background="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Logout"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/llUserProfileDetailPhone"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>